@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All Bands</h1>

@if (@Model.Count == 0)
{
    <h3>No bands have been added yet</h3>
}
else
{
    @foreach (var band in @Model)
    {
        <h3><a href="/band/@band.GetId()">@band.GetName()</a></h3>
    }
}


<h3>Add a new band</h3>
<form action="/bands/new" method="post">
    <label for="band-name">Band Name: </label>
    <input type="text" name="band-name" id="band-name">
    <button type="submit" name="button" class="btn btn-primary">Add</button>
</form>
